========================================================== Brute Force Method ======================================================================
class Solution {
      public int majorityElement(int[] nums) {
        int n = nums.length;
        int target = n/2;
       Map<Integer, Integer> map = new HashMap<>();
       for (int i: nums){
        map.put(i, map.getOrDefault(i, 0) +1); // if not present then by default the value will be 0 of that element
        if(map.get(i) > target) return i;
        }
        return 0;
       }  
     }

========================================================= boyr More's voting method =================================================================
     class Solution{
    public int majorityElement(int[] nums) {
        int  count = 0;
        int candidate = 0;
        for(int i :nums){
            if(count == 0) candidate = i;
            count += (candidate == i) ? 1 : -1;
        }
        return candidate;
    }
}
